<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>*** \(%logger{30}\) %msg%n</pattern>
        </encoder>
    </appender>

    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="scala.slick.ast" level="OFF" />
    <logger name="scala.slick.compiler" level="OFF" />
    <logger name="scala.slick.relational" level="OFF" />
    <logger name="scala.slick.session" level="DEBUG" />

</configuration>
